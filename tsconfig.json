{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "paths": {
      "@engine": ["./src/datastar/engine/index.ts"],
      "@engine/*": ["./src/datastar/engine/*"],
      "@plugins/*": ["./src/datastar/plugins/*"],
      "@bundles/*": ["./src/datastar/bundles/*"],
      "@utils/*": ["./src/datastar/utils/*"]
    },
  },
  "include": [
    "src/**/*"
  ]
}
